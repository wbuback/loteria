<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Não adicione nada antes destas meta-tags -->
    <title>@ViewBag.Title - Loteria</title>
    <!-- Hack para funcionamento de HTML5 e Media Queries no IE8 -->
    <!-- ATENÇÃO: Não funcionará se abrir o arquivo com duplo clique, via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700" rel="stylesheet" type="text/css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.10.1/sweetalert2.min.css" rel="stylesheet" type="text/css">
    
    @Styles.Render("~/Content/Css")

</head>
<body>
  
    <div class="container body-content">
        @RenderBody()
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.10.1/sweetalert2.min.js"></script>
    <script src="https://use.fontawesome.com/76d36c1ad0.js"></script>
    @Scripts.Render("~/Content/Scripts")
    
    @{
        var pagina = ViewContext.RouteData.Values["action"].ToString();
    }

    @if (pagina == "conferir")
    {
        <script src="~/Content/Scripts/conferencia.js"></script>
    }
    else
    {
        <script src="~/Content/Scripts/apostas.js"></script>
    }

</body>
</html>

